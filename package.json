{
  "name": "email-processing-service",
  "version": "1.0.0",
  "description": "Email ingestion and processing system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "worker:email-fetcher": "ts-node src/worker/emailFetcher.worker.ts",
    "worker:attachment-processor": "ts-node src/worker/attatchmentProcessor.worker.ts",
    "worker:db-writer": "ts-node src/worker/dbWriter.worker.ts",
    "worker:dlq-processor": "ts-node src/worker/dlqProcessor.worker.ts",
    "test:e2e": "node test-e2e.js",
    "test:layer": "node test-layer-by-layer.js",
    "queue:clear": "node delete-inflight-messages.js",
    "migrate": "npm run build && NODE_ENV=development npx sequelize-cli db:migrate",
    "migrate:undo": "npm run build && NODE_ENV=development npx sequelize-cli db:migrate:undo"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.1",
    "@aws-sdk/client-sqs": "^3.490.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "googleapis": "^128.0.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "sequelize-cli": "^6.6.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "google-auth-library": "^9.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
